                        <artifactId>ai-instuctions-uploader-maven-plugin</artifactId>
                        <version>${project.version}</version> <!-- match your plugin version -->
                        <executions>
                            <execution>
                                <id>upload-json</id>
                                <phase>verify</phase> <!-- or whichever phase you want -->
                                <goals>
                                    <goal>upload-ai</goal>
